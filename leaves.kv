#:kivy 1.7.0

<MainWindow>:
	canvas.before:
		Color:
			rgba: 1, 1, 1, self.alpha
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'img/background.png'
	canvas:
		Rectangle:
			pos: self.width / 2 - self.liana_width / 2, self.liana_y
			size: self.liana_width, self.height
			source: 'img/Steble_01.png'
	canvas.after:
		Color:
			rgba: 0.2, 0.2, 0.4, 0.5 * self.alpha
		Rectangle:
			pos: self.x, self.height - self.border_height
			size: self.width, self.border_height
	Label:
		pos: self.parent.right - 80, self.parent.top - 2 * self.parent.border_height
		text: str(self.parent.combo_points)
		font_name: 'fonts/GRAVO_free_font.ttf'
		font_size: 30
		color: 0, 1, 0, self.parent.alpha

<Leaf>:
	canvas:
		# Color:
			# rgba: 0.7, 0.4, 0.6, 1
		Rectangle:
			pos: self.pos
			size: self.size
			source: self.source
	Label:
		center: self.parent.center
		text: self.parent.expression
		font_name: 'fonts/Cicle_Gordita.ttf'
		font_size: 30
		bold: True


<KoalaPaw>:
	canvas:
		# Color:
		# 	hsv: 0.2, 0.5, 0.7
		Rectangle:
			pos: self.pos
			size: self.size

<RestartMenu>:
	Label:
		text: self.parent.label_text
		center: self.parent.center[0], 4 * self.parent.height / 5
	Button:
		center: self.parent.center[0], 3 * self.parent.height / 5
		text: 'Restart'
		on_release: self.parent.parent.start_game()
	Button:
		center: self.parent.center[0], 2 * self.parent.height / 5
		text: 'Menu'
		on_release: self.parent.parent.game_over()