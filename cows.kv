#:kivy 1.7.0

<CowsMainWidget>:
    canvas.before:
        Rectangle:
            size: self.width / 9, self.height / 12
            pos: self.width / 10, 5 * self.height / 6
            source: 'img/cows/background/sun.png'
        Rectangle:
            size: self.width / 5, self.height / 8
            pos: 8 * self.width / 10, 5 * self.height / 7
            source: 'img/cows/background/cloud_02.png'
        Rectangle:
            size: self.width / 5, self.height / 8
            pos: 1 * self.width / 10, 4 * self.height / 7
            source: 'img/cows/background/cloud_01.png'
        Rectangle:
            size: self.width, self.height / 3
            pos: [0, self.size[1] // 4.5]
            source: 'img/cows/background/top_background.png'
        Rectangle:
            size: self.size[0], self.size[1] / 4.5
            pos: self.pos
            source: 'img/cows/background/bottom_background.png'
        Color:
            rgba: 0.2, 0.2, 0.4, 0.5
        Rectangle:
            pos: 0, self.height - self.height // 17
            size: self.width, self.height // 17
    Label:
        pos: self.parent.right - self.width, self.parent.top - self.parent.height / 10 
        text: str(self.parent.points)
        font_name: 'fonts/Billy.ttf'
        font_size: self.parent.height / 10
        color: 1, 1, 1, 1


<Balloon>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/cows/balloon.png'
    Label:
        center: self.parent.center
        text: self.parent.expression
        font_name: 'fonts/Billy.ttf'
        font_size: self.parent.height / 3


<Cow>:
    color: 1, 1, 1, self.alpha

<CustomButton@Button>:
    font_name: 'fonts/Billy.ttf'
    font_size: self.parent.height // 20
    size: self.parent.width // 3, self.parent.height // 10
    background_normal: 'img/buttons/button_01.png'
    background_down: 'img/buttons/button_02.png'
    border: (0, 0, 0, 0)
    halign: 'center'
    valign: 'middle'

<CowStartMenu>:
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        center: self.parent.center[0], 6 * self.parent.height / 8
        text: self.parent.text
        halign: 'center'
        valign: 'middle'
        font_name: 'fonts/Billy.ttf'
        font_size: self.parent.height // 20
        markup: True
    CustomButton:
        center: self.parent.center[0], 4 * self.parent.height / 8
        text: 'Easy'
        on_release: self.parent.select_difficulty(1)        
    CustomButton:
        center: self.parent.center[0], 3 * self.parent.height / 8
        text: 'Normal'
        on_release: self.parent.select_difficulty(2)
    CustomButton:
        center: self.parent.center[0], 2 * self.parent.height / 8
        text: 'UFO moves\nreally quick!'
        on_release: self.parent.select_difficulty(3)
    CustomButton:
        center: self.parent.center[0], 1 * self.parent.height / 8
        text: 'Menu'
        on_release: self.parent.exit()

<Controls>:
    Label:
        text: self.parent.value
        center: [self.parent.center[0], self.parent.center[1] + self.parent.button_size]
        font_size: self.parent.height // 6
    Button:
        text: ''
        center: [self.parent.width - 2 * self.parent.button_size - 10, self.parent.center[1] + self.parent.button_size]
        size: [self.parent.button_size, self.parent.button_size]
        on_release: self.parent.remove_symbol()
        background_normal: 'img/buttons/back_0.png'
        background_down: 'img/buttons/back_1.png'
        border: (0, 0, 0, 0)
    Button:
        text: ''
        center: [self.parent.width - self.parent.button_size, self.parent.center[1] + self.parent.button_size]
        size: [self.parent.button_size, self.parent.button_size]
        on_release: self.parent.clear()
        background_normal: 'img/buttons/close_0.png'
        background_down: 'img/buttons/close_1.png'
        border: (0, 0, 0, 0)
